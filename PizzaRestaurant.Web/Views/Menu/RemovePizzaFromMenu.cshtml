@model RemovePizzaFromMenuViewModel

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title">Remove Pizza from Menu</h2>
                <p class="card-text">Are you sure you want to remove <strong>@Model.PizzaName</strong> from the menu <strong>@Model.MenuName</strong>?</p>
                <form method="post">
                    <input type="hidden" asp-for="MenuId" />
                    <input type="hidden" asp-for="PizzaId" />
                    <div class="d-flex justify-content-center mb-3">
                        <button type="submit" class="btn btn-danger mr-2">Remove</button>
                        <a asp-action="Edit" asp-route-id="@Model.MenuId" class="btn btn-primary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
