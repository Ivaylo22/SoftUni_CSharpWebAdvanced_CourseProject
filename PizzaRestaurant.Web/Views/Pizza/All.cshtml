@model IEnumerable<PizzasForMenuViewModel>

@{
    ViewData["Title"] = "Pizzas";
}

<div class="row">
    @foreach (var pizza in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <img src="@pizza.ImageUrl" class="card-img-top" alt="Pizza Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@pizza.Name</h5>
                    <p class="card-text">@pizza.Description</p>
                    <p class="card-text">Price: $@pizza.InitialPrice</p>
                    <a asp-controller="Pizza" asp-action="Details" asp-route-pizzaId="@pizza.Id" class="btn btn-primary">View Details</a>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@pizza.Id" class="btn btn-warning mb-2 w-100 p-1 fw-bold">Edit</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" class="btn btn-danger mb-2 w-100 p-1 fw-bold">Delete</a>
                    </div>
                </div>
            </div>        
        </div>
    }
</div>

<div class="text-center">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>
