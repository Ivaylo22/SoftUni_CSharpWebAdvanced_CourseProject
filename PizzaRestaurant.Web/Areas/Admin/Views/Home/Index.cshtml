@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b>.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users </b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Menu" asp-action="All"
       class="btn btn-primary btn-sm">All Menus</a>
    <a asp-area="" asp-controller="Pizza" asp-action="All"
       class="btn btn-primary btn-sm">All Pizzas</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Pizza" asp-action="Add"
       class="btn btn-primary btn-sm">Add Pizzas</a>
    <a asp-area="Admin" asp-controller="Menu" asp-action="Add"
       class="btn btn-primary btn-sm">Add Menus</a>
    <a asp-area="Admin" asp-controller="Product" asp-action="Options"
       class="btn btn-primary btn-sm">Edit Products</a>
    <a asp-area="Admin" asp-controller="Topping" asp-action="Options"
       class="btn btn-primary btn-sm">Edit Toppings</a>
    <a asp-area="Admin" asp-controller="Dough" asp-action="Options"
       class="btn btn-primary btn-sm">Edit Doughs</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Rent" asp-action="All"
       class="btn btn-primary btn-sm">All Rents</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-sm">All Users</a>
</div>
