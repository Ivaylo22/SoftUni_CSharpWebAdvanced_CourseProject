@model AddPizzaViewModel

@{
    ViewData["Title"] = "Add Pizza";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-area="Admin" method="post" action="/Pizza/Add">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label for="InitialPrice">Initial Price:</label>
        <input class="form-control" id="InitialPrice" name="InitialPrice" required>
        <span asp-validation-for="InitialPrice" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageUrl">Image URL:</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" required>
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoughId"></label>
        <select asp-for="DoughId" class="form-control">
            @foreach (var dough in Model.Doughs)
            {
                <option value="@dough.Id">@dough.Name</option>
            }
        </select>
        <span asp-validation-for="DoughId" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label>Available Products:</label>
        <div class="row">
            @foreach (var product in Model.AvailableProducts)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="Product_@product.Id" name="ProductsId" value="@product.Id">
                        <label class="form-check-label" for="Product_@product.Id">@product.Name</label>
                    </div>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Pizza</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}